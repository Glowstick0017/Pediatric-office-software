<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="221.0"
      prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.memeteam.cse360project.MessageController">
   <GridPane prefHeight="221.0" prefWidth="500.0">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints maxHeight="183.0" minHeight="10.0" prefHeight="183.0" vgrow="SOMETIMES"/>
         <RowConstraints maxHeight="133.0" minHeight="10.0" prefHeight="93.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <VBox.margin>
         <Insets/>
      </VBox.margin>
      <Label text="Send Message">
         <font>
            <Font name="Arial Black" size="18.0"/>
         </font>
         <GridPane.margin>
            <Insets left="80.0" top="-70.0"/>
         </GridPane.margin>
      </Label>
      <ImageView fitHeight="38.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
         <GridPane.margin>
            <Insets left="30.0" top="-70.0"/>
         </GridPane.margin>
         <Image url="@med.png"/>
      </ImageView>
      <TextArea maxHeight="60.0" minWidth="440.0" promptText="Message.."
                onKeyPressed="#onMessageInputChange" fx:id="messageField">
         <GridPane.margin>
            <Insets left="30.0" top="50.0"/>
         </GridPane.margin>
      </TextArea>
      <Button mnemonicParsing="false" text="cancel" GridPane.rowIndex="1" onAction="#onCancelButtonClick"
              fx:id="cancelButton">
         <GridPane.margin>
            <Insets left="180.0"/>
         </GridPane.margin>
      </Button>
      <Button defaultButton="true" disable="true" mnemonicParsing="false" text="Send Message"
              GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#onMessageSendButtonClick"
              fx:id="sendMessageButton">
         <GridPane.margin>
            <Insets left="20.0"/>
         </GridPane.margin>
      </Button>
   </GridPane>
</VBox>
