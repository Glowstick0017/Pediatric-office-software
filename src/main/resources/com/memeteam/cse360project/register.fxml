<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.memeteam.cse360project.RegisterController">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Exit Application" onAction="#exit"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About" onAction="#about"/>
        </Menu>
    </MenuBar>
    <GridPane prefHeight="377.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Patient Register" GridPane.columnIndex="1">
            <font>
                <Font name="Arial Bold" size="16.0"/>
            </font>
            <GridPane.margin>
                <Insets left="-30.0" top="-30.0"/>
            </GridPane.margin>
        </Label>
        <Label text="First Name:" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="-110.0" top="-160.0"/>
            </GridPane.margin>
        </Label>
        <Label layoutX="200.0" layoutY="120.0" text="Last Name:" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="-110.0" top="-80.0"/>
            </GridPane.margin>
        </Label>
        <TextField maxWidth="130.0" promptText="first name.." GridPane.columnIndex="1" GridPane.rowIndex="1"
                   fx:id="firstnameField" onKeyPressed="#onInputChange">
            <GridPane.margin>
                <Insets left="-20.0" top="-160.0"/>
            </GridPane.margin>
        </TextField>
        <TextField maxWidth="130.0" promptText="last name.." GridPane.columnIndex="1" GridPane.rowIndex="1"
                   fx:id="lastnameField" onKeyPressed="#onInputChange">
            <GridPane.margin>
                <Insets left="-20.0" top="-80.0"/>
            </GridPane.margin>
        </TextField>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Date of birth:" GridPane.columnIndex="1"
              GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="-110.0"/>
            </GridPane.margin>
        </Text>
        <DatePicker maxWidth="130.0" promptText="MM/DD/YYYY" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="dateField">
            <GridPane.margin>
                <Insets left="-20.0"/>
            </GridPane.margin>
        </DatePicker>
        <Label text="Username:" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="-110.0" top="80.0"/>
            </GridPane.margin>
        </Label>
        <Label text="Password:" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="-110.0" top="160.0"/>
            </GridPane.margin>
        </Label>
        <TextField maxWidth="130.0" promptText="username.." GridPane.columnIndex="1" GridPane.rowIndex="1"
                   fx:id="usernameField" onKeyPressed="#onInputChange">
            <GridPane.margin>
                <Insets left="-20.0" top="80.0"/>
            </GridPane.margin>
        </TextField>
        <TextField maxWidth="130.0" promptText="password.." GridPane.columnIndex="1" GridPane.rowIndex="1"
                   fx:id="passwordField" onKeyPressed="#onInputChange">
            <GridPane.margin>
                <Insets left="-20.0" top="160.0"/>
            </GridPane.margin>
        </TextField>
        <Button disable="true" maxWidth="100.0" mnemonicParsing="false" text="Register" GridPane.columnIndex="1"
                GridPane.rowIndex="2" fx:id="registerButton" onAction="#onRegisterButtonClick">
            <GridPane.margin>
                <Insets left="-50.0" top="100.0"/>
            </GridPane.margin>
        </Button>
        <ImageView fitHeight="70.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true"
                   GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets left="-110.0" top="-30.0"/>
            </GridPane.margin>
            <Image url="@med.png"/>
        </ImageView>
        <Button defaultButton="true" maxWidth="100.0" mnemonicParsing="false" onAction="#onMedicalButtonClick"
                text="Medical History" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="-100.0" top="10.0"/>
            </GridPane.margin>
        </Button>
        <Button defaultButton="true" mnemonicParsing="false" onAction="#onContactButtonClick" text="Contact Info"
                GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="20.0" top="10.0"/>
            </GridPane.margin>
        </Button>
    </GridPane>
    <Label text="Already have an account? Click here to log in" underline="true" onMouseClicked="#onLoginTextClick">
        <VBox.margin>
          <Insets left="180.0" top="10.0"/>
        </VBox.margin>
    </Label>
</VBox>
