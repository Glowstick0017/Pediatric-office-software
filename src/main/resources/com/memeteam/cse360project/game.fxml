<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0"
      prefWidth="571.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.memeteam.cse360project.GameController">
   <GridPane prefHeight="377.0" prefWidth="600.0">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints maxHeight="185.0" minHeight="10.0" prefHeight="185.0" vgrow="SOMETIMES"/>
         <RowConstraints maxHeight="170.0" minHeight="10.0" prefHeight="165.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <ImageView fitHeight="86.0" fitWidth="86.0" pickOnBounds="true" preserveRatio="true">
         <GridPane.margin>
            <Insets left="50.0"/>
         </GridPane.margin>
         <Image url="@med.png"/>
      </ImageView>
      <Circle fill="#ffffff00" onMouseClicked="#onWheelchairClick" radius="70.0" stroke="BLACK" strokeType="INSIDE">
         <effect>
            <Shadow/>
         </effect>
         <GridPane.margin>
            <Insets left="20.0"/>
         </GridPane.margin>
      </Circle>
      <Label text="Accidents:" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="150.0" left="35.0"/>
         </GridPane.margin>
         <font>
            <Font name="System Bold" size="17.0"/>
         </font>
      </Label>
      <Label fx:id="accidentCount" text="0" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="148.0" left="130.0"/>
         </GridPane.margin>
         <font>
            <Font name="System Bold" size="18.0"/>
         </font>
      </Label>
      <Label fx:id="tylenolLabel" text="Tylenol" visible="false" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets bottom="20.0" left="60.0"/>
         </GridPane.margin>
         <font>
            <Font size="17.0"/>
         </font>
      </Label>
      <Button fx:id="tylenolButton" mnemonicParsing="false" text="Buy $10" visible="false" GridPane.columnIndex="1"
              onAction="#onTylenolBuy">
         <GridPane.margin>
            <Insets bottom="20.0" left="125.0"/>
         </GridPane.margin>
      </Button>
      <Label fx:id="tylenolCount" text="x0" visible="false" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets bottom="20.0" left="200.0"/>
         </GridPane.margin>
      </Label>
   </GridPane>
</VBox>
