<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.memeteam.cse360project.LoginController">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Exit Application" onAction="#exit"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About" onAction="#about"/>
        </Menu>
    </MenuBar>
    <GridPane prefHeight="377.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Username:" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="-110.0" top="-60.0"/>
            </GridPane.margin>
        </Label>
        <Label text="Password:" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="-110.0" top="20.0"/>
            </GridPane.margin>
        </Label>
        <TextField fx:id="usernameField" maxWidth="150.0" onKeyPressed="#onUsernameInputChange"
                   promptText="username.." GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="-40.0" top="-60.0"/>
            </GridPane.margin>
        </TextField>
        <PasswordField fx:id="passwordField" maxWidth="150.0" onKeyPressed="#onPasswordInputChange"
                       promptText="password.." GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="-40.0" top="20.0"/>
            </GridPane.margin>
        </PasswordField>
        <Button fx:id="registerButton" defaultButton="true" mnemonicParsing="false"
                onAction="#onRegisterButtonClick" text="Register" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="-80.0" top="120.0"/>
            </GridPane.margin>
        </Button>
        <Button fx:id="loginButton" disable="true" mnemonicParsing="false" onAction="#onLoginButtonClick"
                text="Log in" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="10.0" top="120.0"/>
            </GridPane.margin>
        </Button>
        <ImageView fitHeight="70.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true"
                   GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets left="-140.0"/>
            </GridPane.margin>
            <Image url="@med.png"/>
        </ImageView>
        <Label text="Meme Team Medical" GridPane.columnIndex="1">
            <font>
                <Font name="Arial Bold" size="21.0"/>
            </font>
            <padding>
                <Insets left="-60.0"/>
            </padding>
        </Label>
        <Label text="Invalid Credentials" textFill="RED" visible="false" GridPane.columnIndex="1"
               GridPane.rowIndex="2" fx:id="credentialError">
            <GridPane.margin>
                <Insets left="-50.0" top="-40.0"/>
            </GridPane.margin>
        </Label>
    </GridPane>
</VBox>
