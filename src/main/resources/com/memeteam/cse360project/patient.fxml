<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0"
      prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.memeteam.cse360project.PatientController">
   <MenuBar>
      <Menu mnemonicParsing="false" text="File">
         <MenuItem mnemonicParsing="false" text="Log out" onAction="#logOut"/>
         <MenuItem mnemonicParsing="false" text="Exit Application" onAction="#exit"/>
      </Menu>
      <Menu mnemonicParsing="false" text="Help">
         <MenuItem mnemonicParsing="false" text="About" onAction="#about"/>
      </Menu>
   </MenuBar>
   <GridPane prefHeight="411.0" prefWidth="500.0">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <VBox.margin>
         <Insets/>
      </VBox.margin>
      <Label text="Patient Portal">
         <font>
            <Font name="Arial Black" size="18.0"/>
         </font>
         <GridPane.margin>
            <Insets left="80.0" top="-70.0"/>
         </GridPane.margin>
      </Label>
      <ImageView fitHeight="38.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
         <GridPane.margin>
            <Insets left="30.0" top="-70.0"/>
         </GridPane.margin>
         <Image url="@med.png"/>
      </ImageView>
      <Label text="Name: ">
         <GridPane.margin>
            <Insets left="30.0" top="30.0"/>
         </GridPane.margin>
      </Label>
      <Label text="Age:">
         <GridPane.margin>
            <Insets left="30.0" top="70.0"/>
         </GridPane.margin>
      </Label>
      <Label text="Lastname, Firstname">
         <GridPane.margin>
            <Insets left="120.0" top="30.0"/>
         </GridPane.margin>
      </Label>
      <Label text="##">
         <GridPane.margin>
            <Insets left="120.0" top="70.0"/>
         </GridPane.margin>
      </Label>
      <Label text="Past Visit Doctors Notes:" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="30.0" top="-120.0"/>
         </GridPane.margin>
      </Label>
      <TextArea editable="false" maxHeight="60.0" minWidth="440.0" text="Notes.." GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="30.0" top="-30.0"/>
         </GridPane.margin>
      </TextArea>
      <Button defaultButton="true" mnemonicParsing="false" text="Edit Medical History" GridPane.columnIndex="1" onAction="#onEditMedicalButtonClick">
         <GridPane.margin>
            <Insets left="30.0" top="30.0"/>
         </GridPane.margin>
      </Button>
      <Button mnemonicParsing="false" text="Send Message" GridPane.columnIndex="1" onAction="#onSendMessageButtonClick">
         <GridPane.margin>
            <Insets left="30.0" top="100.0"/>
         </GridPane.margin>
      </Button>
      <Button defaultButton="true" mnemonicParsing="false" text="Edit Contact Info" GridPane.columnIndex="1" onAction="#onEditContactButtonClick">
         <GridPane.margin>
            <Insets left="30.0" top="-40.0"/>
         </GridPane.margin>
      </Button>
   </GridPane>
</VBox>
