<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="201.0"
      prefWidth="240.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.memeteam.cse360project.ContactController">
   <GridPane prefHeight="205.0" prefWidth="476.0" style="-fx-background-color: #262626;">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <ImageView fitHeight="38.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
         <GridPane.margin>
            <Insets left="30.0" top="-120.0"/>
         </GridPane.margin>
         <Image url="@med.png"/>
      </ImageView>
      <Label text="Contact Info" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="18.0"/>
         </font>
         <GridPane.margin>
            <Insets left="80.0" top="-120.0"/>
         </GridPane.margin>
      </Label>
      <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClick"
              style="-fx-background-color: transparent; -fx-border-color: #0177fb; -fx-border-radius: 5;"
               textFill="WHITE" text="Cancel">
         <opaqueInsets>
            <Insets/>
         </opaqueInsets>
         <GridPane.margin>
            <Insets left="40.0" top="130.0"/>
         </GridPane.margin>
      </Button>
      <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" onAction="#onSaveButtonClick"
              style="-fx-background-color: #0177fb;" text="Save Changes" textFill="WHITE">
         <opaqueInsets>
            <Insets/>
         </opaqueInsets>
         <GridPane.margin>
            <Insets left="100.0" top="130.0"/>
         </GridPane.margin>
      </Button>
      <Label text="Phone:" textFill="WHITE">
         <GridPane.margin>
            <Insets left="30.0" top="-30.0"/>
         </GridPane.margin>
      </Label>
      <Label text="Email:" textFill="WHITE">
         <GridPane.margin>
            <Insets left="30.0" top="40.0"/>
         </GridPane.margin>
      </Label>
      <TextField fx:id="phoneField" maxWidth="120.0" promptText="(123) 456-7890 "
                 style="-fx-background-color: #1d1d1d; -fx-text-fill: white;">
         <GridPane.margin>
            <Insets left="80.0" top="-30.0"/>
         </GridPane.margin>
      </TextField>
      <TextField fx:id="emailField" maxWidth="120.0" promptText="email"
                 style="-fx-background-color: #1d1d1d; -fx-text-fill: white;">
         <GridPane.margin>
            <Insets left="80.0" top="40.0"/>
         </GridPane.margin>
      </TextField>
   </GridPane>
</VBox>
